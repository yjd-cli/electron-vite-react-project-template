{
  "extends":  "./tsconfig.base.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/common/**/*",
    "src/renderer/**/*",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    },
    "typeRoots": ["node_modules/@types", "./src/renderer/types"],
  }
}

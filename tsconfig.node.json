{
  "extends": "./tsconfig.base.json",
  "include": [
    "config/**/*",
    "src/common/**/*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@main/*": [
        "src/main/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    },
    "types": [
      "electron-vite/node"
    ],
  }
}
